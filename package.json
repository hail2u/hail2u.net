{
  "name": "hail2u.net",
  "description": "Here are the articles, documents, and projects mainly about web development.",
  "version": "7.12.2",
  "author": "Kyo Nagashima <hail2u@gmail.com> (https://kyonagashima.com/)",
  "bugs": {
    "url": "https://github.com/hail2u/hail2u.net/issues"
  },
  "devDependencies": {
    "css-mqpacker": "^6.0.1",
    "csswring": "^6.0.2",
    "fs-extra": "^4.0.3",
    "google-closure-compiler-js": "^20171203.0.0",
    "html-minifier": "^3.5.7",
    "image-size": "^0.6.1",
    "marked": "^0.3.7",
    "minimist": "^1.2.0",
    "mustache": "^2.2.1",
    "postcss": "^6.0.14",
    "postcss-import": "^11.0.0",
    "which": "^1.0.8"
  },
  "homepage": "https://hail2u.net/",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/hail2u/hail2u.net.git"
  },
  "scripts": {
    "articles": "node ./bin/mustache.js --articles",
    "prebuild": "npm run clear",
    "build": "node ./bin/mustache.js",
    "postbuild": "npm run test_html",
    "clear": "rm -fr ./tmp/ && mkdir tmp",
    "precss": "npm run test_css && npm run clear",
    "css": "node ./bin/css.js",
    "postcss": "cp -rT ./src/css/ ./dist/css/ && rm ./dist/css/test.html && cp -rT ./tmp/ ./dist/css/ && cp ./tmp/main.min.css ./src/partial/css.mustache && npm run styleGuide",
    "deploy": "cd ./dist/ && git add --all && git commit --message=\"Build\" && git push origin gh-pages",
    "feed": "node ./bin/mustache.js --feed",
    "html": "node ./bin/mustache.js --html",
    "posthtml": "npm run test_html",
    "preimg": "npm run clear",
    "img": "node ./bin/img.js",
    "postimg": "cp -rT ./src/img/ ./dist/img/",
    "prejs": "npm run test_js && npm run clear",
    "js": "node ./bin/js.js",
    "postjs": "cp -rT ./src/js/ ./dist/js/ && cp -rT ./tmp/ ./dist/js/ && cp ./tmp/async.min.js ./src/partial/js-async.mustache && cp ./tmp/defer.min.js ./src/partial/js-defer.mustache",
    "preview": "npm run clear && node ./bin/blog.js --preview",
    "publish": "node ./bin/blog.js --publish",
    "postpublish": "git add -- ./src/blog/articles.json ./src/blosxom/plugins/state/ && git commit --message=\"Update cache\"",
    "rebuild": "npm run css && npm run img && npm run js && npm run build && npm run articles",
    "start": "http-server ./dist/ -o",
    "style_guide": "node ./bin/style-guide.js",
    "poststyle_guide": "npm run test_style_guide",
    "sitemap": "node ./bin/mustache.js --sitemap",
    "test": "npm run test_html && npm run test_css && npm run test_js",
    "test_css": "stylelint \"./src/css/**/*.css\"",
    "test_html": "htmlhint --format compact \"./dist/**/index.html\" \"./dist/documents/**/*.html\"",
    "test_js": "eslint ./bin/ ./lib/ ./src/js/",
    "test_style_guide": "htmlhint --format compact \"./dist/style-guide/index.html\"",
    "update": "node ./bin/blog.js --update",
    "postupdate": "git add -- ./src/blog/articles.json && git commit --message=\"Update cache\""
  }
}
