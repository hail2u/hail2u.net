{
  "name": "hail2u.net",
  "description": "Here is a decent document, a simple translation, and a weblog article about web development. These are written by Kyo Nagashima.",
  "version": "6.108.1",
  "author": "Kyo Nagashima <hail2u@gmail.com> (https://kyonagashima.com/)",
  "bugs": {
    "url": "https://github.com/hail2u/hail2u.net/issues"
  },
  "devDependencies": {
    "async": "^2.0.1",
    "css-mqpacker": "^5.0.1",
    "csswring": "^5.0.0",
    "feedmix": "^1.0.0",
    "fs-extra": "^1.0.0",
    "google-closure-compiler-js": "^20161201.0.0",
    "html-minifier": "^3.1.0",
    "http-server": "^0.9.0",
    "marked": "^0.3.4",
    "minimist": "^1.2.0",
    "mustache": "^2.2.1",
    "pit-ro": "0.0.1",
    "postcss": "^5.0.19",
    "postcss-round-float": "^0.1.0",
    "which": "^1.0.8",
    "xml2js": "^0.4.1"
  },
  "homepage": "https://hail2u.net/",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/hail2u/hail2u.net.git"
  },
  "scripts": {
    "articles": "node ./bin/articles.js",
    "postarticles": "node ./bin/generate.js --blog && npm run index",
    "blosxom": "node ./bin/blosxom.js",
    "postblosxom": "git add -- ./src/weblog/plugins/state/ && git diff --cached --exit-code --quiet || git commit --message=\"Update cache files\"",
    "clear": "rm -rf ./tmp/*",
    "precss": "npm run test_css && npm run clear",
    "css": "node ./bin/sassc.js && node ./bin/postcss.js",
    "postcss": "cp -aux ./tmp/* ./dist/styles/ && node ./bin/style-guide.js",
    "deploy": "cd ./dist/ && git add --all && git commit --message=\"Build\" && git push origin gh-pages",
    "prehtml": "npm run test_html",
    "html": "node ./bin/generate.js && cp -aux ./src/html/documents/*.html ./dist/documents/",
    "posthtml": "npm run index",
    "preimg": "npm run clear",
    "img": "node ./bin/rasterize.js && node ./bin/favicon.js",
    "postimg": "cp -aux ./src/img/* ./dist/images/",
    "index": "node ./bin/feedmix.js && node ./bin/sitemap.js",
    "prejs": "npm run test_js && npm run clear && cp -aux ./src/js/*.js ./tmp/",
    "js": "node ./bin/closure-compiler.js",
    "postjs": "cp -aux ./tmp/* ./dist/scripts/",
    "preview": "node ./bin/preview.js",
    "start": "http-server ./dist/ -o",
    "static": "cp -aux ./src/.nojekyll ./src/CNAME ./src/robots.txt ./dist/",
    "test": "npm run test_html && npm run test_css && npm run test_js",
    "test_css": "stylelint --syntax scss \"./src/css/**/*.scss\"",
    "test_html": "htmlhint ./src/css/test.html \"./src/html/documents/**/*.html\"",
    "test_js": "eslint ./bin/ ./src/js/",
    "upload": "node ./bin/upload.js"
  }
}
