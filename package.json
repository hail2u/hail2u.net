{
  "name": "hail2u.net",
  "version": "9.3.12",
  "description": "The source files of Hail2u (https://hail2u.net/) website",
  "homepage": "https://hail2u.net/",
  "bugs": {
    "url": "https://github.com/hail2u/hail2u.net/issues"
  },
  "license": "UNLICENSED",
  "author": "Kyo Nagashima <hail2u@gmail.com> (https://kyonagashima.com/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/hail2u/hail2u.net.git"
  },
  "scripts": {
    "clear": "rm -fr tmp/ && mkdir tmp",
    "comic": "node bin/book.js --type=comic",
    "contribute": "node bin/article.js --contribute",
    "css": "node bin/css.js && node bin/style-guide.js && cp -ru tmp/. src/css/. dist/css/",
    "deploy": "cd dist/ && git add --all && git diff --cached --exit-code --quiet || git commit --message=\"Build\" && git push origin gh-pages",
    "feed": "node bin/feed.js",
    "html": "node bin/html.js",
    "img": "node bin/icon.js && cp -ru src/img/. dist/img/",
    "is_master": "node bin/is-master.js",
    "js": "node bin/js.js && cp -ru tmp/. src/js/. dist/js/",
    "link": "node bin/link.js",
    "nonfiction": "node bin/book.js --type=nonfiction",
    "novel": "node bin/book.js --type=novel",
    "photo": "node bin/photo.js",
    "start": "serve --listen 8080 dist/",
    "static": "cp -u src/.nojekyll src/CNAME src/robots.txt dist/ && cp -ru src/documents/. dist/documents/ && cp -ru src/pub/. dist/pub/",
    "status": "node bin/status.js",
    "test_css": "stylelint src/css/",
    "test_draft": "node bin/article.js --test",
    "test_js": "eslint bin/ lib/ src/js/",
    "test": "npm run test_css && npm run test_js",
    "version": "npm run css && npm run js && npm run img && npm run static",
    "postcomic": "npm run deploy && git switch -",
    "postcontribute": "npm run deploy && git switch -",
    "postcss": "rm dist/css/test.html",
    "postjs": "rm dist/js/.eslintrc",
    "postlink": "npm run deploy && git switch -",
    "postnonfiction": "npm run deploy && git switch -",
    "postnovel": "npm run deploy && git switch -",
    "postphoto": "npm run deploy && git switch -",
    "poststatic": "rm dist/documents/documents.json dist/documents/index.json dist/documents/index.mustache",
    "poststatus": "npm run deploy && git switch -",
    "postversion": "git push origin master --tags && npm run html -- --articles && npm run predeploy && git switch -",
    "predeploy": "npm run html && npm run feed",
    "precomic": "git switch master",
    "precontribute": "git switch master",
    "precss": "npm run clear",
    "preimg": "npm run clear",
    "prejs": "npm run clear",
    "prelink": "git switch master",
    "prenonfiction": "git switch master",
    "prenovel": "git switch master",
    "prephoto": "git switch master",
    "prestatus": "git switch master",
    "pretest_draft": "npm run clear",
    "preversion": "git switch master && npm outdated && npm test"
  },
  "devDependencies": {
    "clean-css": "^4.2.1",
    "eslint": "^6.5.1",
    "google-closure-compiler": "^20190929.0.0",
    "highlight.js": "^9.15.10",
    "html-minifier": "^4.0.0",
    "htmlhint": "^0.11.0",
    "minimist": "^1.2.0",
    "mustache": "^3.1.0",
    "serve": "^11.2.0",
    "sharp": "^0.23.1",
    "stylelint": "^11.1.1",
    "svgo": "^1.3.0",
    "to-ico": "^1.1.5",
    "which": "^2.0.1"
  },
  "private": true
}
