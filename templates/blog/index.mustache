<!DOCTYPE html>
<html lang="{{lang}}">
	{{> head}}

	<body>
		{{> page-header}}

		{{#latestArticles}}
			<p class="date"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time></p>

			<p><a href="{{link}}">{{title}}</a></p>
		{{/latestArticles}}

		{{#otherArticles}}
			{{#isFirstInMonth}}
				<section>
					<h2><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>
			{{/isFirstInMonth}}

			<p class="date"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time></p>

			<p><a href="{{link}}">{{title}}</a></p>

			{{#isLastInMonth}}
				</section>
			{{/isLastInMonth}}
		{{/otherArticles}}

		{{> page-footer}}
	</body>
</html>
