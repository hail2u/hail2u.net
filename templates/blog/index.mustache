<!DOCTYPE html>
<html lang="{{lang}}">
  {{> head}}

  <body>
    {{> page-header}}

    {{#articles}}
      {{#isFirstInMonth}}
        <section{{#isFirstInYear}} id="{{strYear}}"{{/isFirstInYear}}>
          <h2><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>
      {{/isFirstInMonth}}

      <a href="{{link}}">
        <section class="post">
          <header>
            <p class="date"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{date}}日</time></p>

            <h3>{{title}}</h3>
          </header>

          <p>{{description}}</p>
        </section>
      </a>

      {{#isLastInMonth}}
        </section>
      {{/isLastInMonth}}
    {{/articles}}

    {{> page-footer}}
  </body>
</html>
