<!DOCTYPE html>
<html lang="{{lang}}">
	{{> head}}

	<body>
		{{> page-header}}

		<section>
			<h2>雑多な記録</h2>

			{{#homeArticles}}
				<p class="date"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time></p>

				<p><a href="{{link}}">{{title}}</a></p>
			{{/homeArticles}}

			<p><a href="/blog/"><span aria-hidden="true">→</span>雑多な記録の一覧へ</a></p>
		</section>

		<section>
			<h2>読み終えた書籍</h2>

			<ol class="showcase">
				{{#homeBooks}}
					<li>{{{body}}}</li>
				{{/homeBooks}}
			</ol>

			<p><a href="/bookshelf/"><span aria-hidden="true">→</span>読み終えた書籍の一覧へ</a></p>
		</section>

		<section>
			<h2>気になったウェブページ</h2>

			{{#homeLinks}}
				<p class="date"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time></p>

				<p><a href="{{link}}">{{title}}</a>: {{description}}</p>
			{{/homeLinks}}

			<p><a href="/links/"><span aria-hidden="true">→</span>気になったウェブページの一覧へ</a></p>
		</section>

		{{> page-footer}}
	</body>
</html>
