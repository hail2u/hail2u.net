<!DOCTYPE html>
<html lang="{{lang}}">
	{{> head}}

	<body>
		{{> page-header}}

		<nav>
			<p><a href="/statuses/log.html">2009年から2018年まで</a></p>
		</nav>

		{{#statuses}}
			{{#isFirstInMonth}}
				<section>
					<h2><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}">{{year}}年{{month}}月{{date}}日</time></h2>
			{{/isFirstInMonth}}

			<p id="on-{{published}}">{{title}}（<time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{hour}}時{{minute}}分</time>）</p>

			{{#isLastInMonth}}
				</section>
			{{/isLastInMonth}}
		{{/statuses}}

		{{> page-footer}}
	</body>
</html>
