  {{/isArticle}}

  <h1><em>{{#isHome}}{{siteTitle}}{{/isHome}}{{^isHome}}{{title}}{{/isHome}}</em>{{^isArticle}}は、{{description}}{{/isArticle}}</h1>
</header>
