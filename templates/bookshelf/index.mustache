<!DOCTYPE html>
<html lang="{{lang}}">
  {{> head}}

  <body>
    {{> page-header}}

    <nav>
      <h2>年別</h2>

      <ol class="fill">
        {{#books}}
          {{#isFirstInYear}}<li><a href="#{{strYear}}">{{year}}年</a></li>{{/isFirstInYear}}
        {{/books}}
      </ol>
    </nav>

    {{#books}}
      {{#isFirstInMonth}}
        <section{{#isFirstInYear}} id="{{strYear}}"{{/isFirstInYear}}>
          <h2><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

          <ul class="showcase">
      {{/isFirstInMonth}}

      <li>
        {{{body}}}
        <p><em>{{title}}</em></p>
        <p>{{description}}</p>
      </li>

      {{#isLastInMonth}}
          </ul>
        </section>
      {{/isLastInMonth}}
    {{/books}}

    {{> page-footer}}
  </body>
</html>
