<!DOCTYPE html>
<html lang="{{lang}}">
	{{> head}}

	<body>
		{{> page-header}}

		<ol class="showcase">
			{{#latestBooks}}
				<li>{{{body}}}</li>
			{{/latestBooks}}
		</ol>

		{{#books}}
			{{#isFirstInMonth}}
				<section>
					<h2><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

					<ol class="showcase">
			{{/isFirstInMonth}}

			<li>{{{body}}}</li>

			{{#isLastInMonth}}
					</ol>
				</section>
			{{/isLastInMonth}}
		{{/books}}

		{{> page-footer}}
	</body>
</html>
