<!DOCTYPE html>
<html lang="{{lang}}">
  {{> head}}

  <body>
    {{> page-header}}

    <nav class="yearly-archives">
      <h2>年別</h2>

      <p>{{#books}}{{#isFirstInYear}}<a href="#{{strYear}}">{{year}}年</a> {{/isFirstInYear}}{{/books}}</p>
    </nav>

    {{#books}}
      {{#isFirstInMonth}}
        <section{{#isFirstInYear}} id="{{strYear}}"{{/isFirstInYear}}>
          <h2><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

          <ol class="showcase">
      {{/isFirstInMonth}}

      <li>{{{body}}}<span><span aria-hidden="true">{{title}} ∥ </span>{{description}}</span></li>

      {{#isLastInMonth}}
          </ol>
        </section>
      {{/isLastInMonth}}
    {{/books}}

    {{> page-footer}}
  </body>
</html>
