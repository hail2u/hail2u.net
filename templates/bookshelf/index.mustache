<!DOCTYPE html>
<html lang="{{lang}}">
  {{> head}}

  <body>
    {{> page-header}}

    {{#books}}
      {{#isFirstInMonth}}
        <section{{#isFirstInYear}} id="{{strYear}}"{{/isFirstInYear}}>
          <h2><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

          <ul class="showcase">
      {{/isFirstInMonth}}

      <li>
        {{{body}}}
        <p>{{title}}</p>
        <p>{{description}}</p>
      </li>

      {{#isLastInMonth}}
          </ul>
        </section>
      {{/isLastInMonth}}
    {{/books}}

    {{> page-footer}}
  </body>
</html>
