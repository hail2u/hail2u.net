package num;

use strict;

# --- Configurable variables -----------

# --- Plug-in package variables --------

# --------------------------------------

sub start {
  return 1;
}

sub strip_leading_zeros {
  my($self, $attributes, $content) = @_;

  $content =~ s/^0*//;

  return $content;
}

1;
