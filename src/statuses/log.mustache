<!DOCTYPE html>
<html lang="{{lang}}">
  {{> head}}

  <body>
    {{> header}}

    <main>
      {{#statuses}}
        {{#isFirstInMonth}}
          <section>
            <h1>{{strYear}}年{{strMonth}}月</h1>

            <ol>
        {{/isFirstInMonth}}

        <li id="on-{{published}}">
          <time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{date}}日 {{hour}}時{{minute}}分</time>
          {{text}}
        </li>

        {{#isLastInMonth}}
            </ol>
          </section>
        {{/isLastInMonth}}
      {{/statuses}}

      <nav>
        <p><a href="/statuses/twitter.html">Twitterでの全記録</a></p>
      </nav>
    </main>

    {{> footer}}
  </body>
</html>
