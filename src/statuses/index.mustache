{{> header}}

{{#statuses}}
  {{#isFirstInMonth}}
    <section>
      <h2 class="headline">{{strYear}}年{{strMonth}}月</h2>

      <ol class="posts">
  {{/isFirstInMonth}}

  <li id="on-{{published}}">
    <time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{date}}日 {{hour}}時{{minute}}分</time>
    {{text}}
  </li>

  {{#isLastInMonth}}
      </ol>
    </section>
  {{/isLastInMonth}}
{{/statuses}}

<nav class="subnavigation">
  <p><a href="/statuses/twitter.html">Twitterでの全記録</a></p>
</nav>

{{> footer}}
