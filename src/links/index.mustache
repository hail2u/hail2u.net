{{> header}}

{{#links}}
  {{#isFirstInMonth}}
    <section id="on-{{strYear}}-{{strMonth}}">
      <h2 class="headline"><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

      <ol class="posts">
  {{/isFirstInMonth}}

  <li>
    <time class="dateline" datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{date}}日</time>
    <a href="{{url}}">{{title}}</a>
  </li>

  {{#isLastInMonth}}
      </ol>
    </section>
  {{/isLastInMonth}}
{{/links}}

{{> footer}}
