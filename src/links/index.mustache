{{> header}}

{{#links}}
	{{#isFirstInMonth}}
		<section id="on-{{strYear}}-{{strMonth}}">
			<h2 class="headline"><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

			<ol class="posts">
	{{/isFirstInMonth}}

	<li>
		<time class="metaline" datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{month}}月{{date}}日</time>
		<a href="{{url}}">{{title}}</a>
	</li>

	{{#isLastInMonth}}
			</ol>
		</section>
	{{/isLastInMonth}}
{{/links}}

<section id="followings">
	<h2 class="headline">フォロー中</h2>

	<ul class="flatlinks">
		{{#followings}}
			<li><a href="{{url}}">{{title}}</a></li>
		{{/followings}}
	</ul>
</section>

{{> footer}}
