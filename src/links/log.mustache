<!DOCTYPE html>
<html lang="{{lang}}">
  {{> head}}

  <body>
    {{> header}}

    <main>
      <nav>
        <ul>
          <li><a href="#nonfiction">教養書</a></li>
          <li><a href="#novel">小説</a></li>
          <li><a href="#comic">マンガ</a></li>
          <li><a href="#webpage">ウェブページ</a></li>
        </ul>
      </nav>

      <section id="nonfiction">
        <h1>教養書</h1>

        <ol>
          {{#nonfictions}}
            <li><a href="https://www.amazon.co.jp/exec/obidos/ASIN/{{asin}}/hail2unet-22">{{title}}</a></li>
          {{/nonfictions}}
        </ol>
      </section>

      <section id="novel">
        <h1>小説</h1>

        <ol>
          {{#novels}}
            <li><a href="https://www.amazon.co.jp/exec/obidos/ASIN/{{asin}}/hail2unet-22">{{title}}</a></li>
          {{/novels}}
        </ol>
      </section>

      <section id="comic">
        <h1>マンガ</h1>

        <ol>
          {{#comics}}
            <li><a href="https://www.amazon.co.jp/exec/obidos/ASIN/{{asin}}/hail2unet-22">{{title}}</a></li>
          {{/comics}}
        </ol>
      </section>

      <section id="webpage">
        <h1>ウェブページ</h1>

        <ol>
          {{#links}}
            <li>
              <time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time>
              <a href="{{url}}">{{title}}</a>
            </li>
          {{/links}}
        </ol>
      </section>
    </main>

    {{> footer}}
  </body>
</html>
