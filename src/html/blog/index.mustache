<!DOCTYPE html>
<html lang="{{lang}}">
  {{> head}}

  <body>
    {{> global-header}}

    <main role="main">
      {{#articles}}
        {{#isFirstInYear}}
          <section id="on-{{year}}" class="section">
            <h1 class="hang"><time>{{year}}</time></h1>

            <ol class="posts">
        {{/isFirstInYear}}

        <li>
          <div><time datetime="{{html5PubDate}}">{{strPubDate}}</time></div>
          <a href="{{link}}">{{{title}}}</a>
        </li>

        {{#isLastInYear}}
            </ol>
          </section>
        {{/isLastInYear}}
      {{/articles}}
    </main>

    {{> site-search}}
    {{> global-footer}}
  </body>
</html>
