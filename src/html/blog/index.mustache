<!DOCTYPE html>
<html lang="ja">
  {{> head}}

  <body>
    {{> global-header}}

    <main class="content" role="main">
      <section id="by-year">
        <h1 class="hanged">公開年別</h1>

        <ol class="flat">
          {{#articles}}
            {{#isFirstInYear}}
              <li><a href="#on-{{year}}"><time>{{year}}</time></a></li>
            {{/isFirstInYear}}
          {{/articles}}
        </ol>
      </section>

      {{#articles}}
        {{#isFirstInYear}}
          <section id="on-{{year}}">
            <h1 class="hanged"><time>{{year}}</time></h1>

            <ol class="posts">
        {{/isFirstInYear}}

        <li>
          <div class="info"><time class="date" datetime="{{html5PubDate}}">{{strPubDate}}</time>
            · <span class="tag"><a href="./{{cat}}/">{{category}}</a></span></div>
          <a href="{{link}}">{{{title}}}</a>
        </li>

        {{#isLastInYear}}
            </ol>
          </section>
        {{/isLastInYear}}
      {{/articles}}
    </main>

    {{> site-search}}
    {{> global-footer}}
  </body>
</html>
