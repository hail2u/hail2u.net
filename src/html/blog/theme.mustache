<!-- blosxom content_type text/html; charset=$blog_encoding -->

<!-- blosxom head -->
<!DOCTYPE html>
<html lang="$blog_language" itemscope itemtype="http://schema.org/<?$permalink::is_permalink ne="1">Blog</?><?$permalink::is_permalink eq="1">BlogPosting</?>">
  <head>
    {{> meta}}

    <title>$categories::title$categories::title_sep$permalink::title$permalink::title_sep$blog_title - {{site_title}}</title>

    {{> link}}
    $back_and_forth::link_prev

    <?$permalink::is_permalink ne="1">
      <meta content="$categories::title$categories::title_sep$blog_title - {{site_title}}" itemprop="name">
      <meta content="{{description}}" itemprop="description">
      <meta content="{{image}}" itemprop="image">
      <link href="{{canonical}}" itemprop="url">
    </?>

    <?$permalink::is_permalink ne="1">
      <meta property="og:title" content="$categories::title$categories::title_sep$blog_title - {{site_title}}">
      <meta property="og:type" content="{{type}}">
      <meta property="og:description" content="{{description}}">
      <meta property="og:image" content="{{image}}">
    </?>

    <?$permalink::is_permalink eq="1">
      <meta property="og:title" content="$permalink::title">
      <meta property="og:type" content="article">
      <meta property="og:description" content="$permalink::description">
      <meta property="og:image" content="$utils::ogp_image">
    </?>

    <meta property="og:url" content="$utils::canonical">
    <meta property="og:locale" content="ja_JP">
    <meta property="og:site_name" content="{{site_title}}">
    <meta prefix="fb: http://ogp.me/ns/fb#" property="fb:admins" content="100000022521341">

    <meta name="twitter:card" content="$utils::card_type">
    <meta name="twitter:creator" content="@hail2unet">

    {{> style}}
    {{> script}}
  </head>

  <body<?$permalink::is_permalink eq="1"> class="permalink"</?>>
    {{> global-header}}

    <main<?$permalink::is_permalink ne="1"> role="main"</?>>
      <?$categories::enabled eq="1">
        <section class="post-list">
          <h1>Articles under $categories::title</h1>

          <footer>
            <p>What I wrote about “$categories::title”.</p>
          </footer>

          <ol>
      </?>

<!-- blosxom date -->

<!-- blosxom story -->
      <article<?$permalink::is_permalink eq="1"> role="main"</?>>
        <?$utils::has_image ne="1"><meta content="{{image}}" itemprop="image"></?>
        <link href="$url$path/$fn.$default_flavour" itemprop="url">

        <h1 itemprop="name">$title</h1>

        <footer>
          <p>on <time datetime="$yr-$mo_num-$da<?$fn>T</?>$ti<?$fn>:</?>00+09:00" itemprop="datePublished">$mo <@utils.strip_leading_zeros output="Yes">$da</@utils.strip_leading_zeros>, $yr</time>
            under <span class="tag" itemprop="keywords"><a href="$url$path/">$categories::name</a></span></p>
        </footer>

        <div itemprop="articleBody">$body</div>
      </article>

      <?$story_counter::count eq="1">
        {{> google-adsense__ad-main}}
      </?>

      <?$back_and_forth::enabled eq="1">
        <nav class="read-older">
          $back_and_forth::prev
        </nav>
      </?>

<!-- blosxom foot -->
      <?$categories::enabled eq="1">
          </ol>
        </section>

        {{> google-adsense__ad-main}}
      </?>
    </main>

    {{> global-footer}}
  </body>
</html>
