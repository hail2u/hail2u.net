<!-- blosxom head -->
<!DOCTYPE html>
<html lang="$blog_language" itemscope itemtype="http://schema.org/<?$permalink::is_permalink ne="1">Blog</?><?$permalink::is_permalink eq="1">BlogPosting</?>">
  <head>
    {{> meta}}

    <title>$categories::title$categories::title_sep$permalink::title$permalink::title_sep$blog_title - {{site_title}}</title>

    {{> link}}

    $back_and_forth::link_prev

    <?$permalink::is_permalink ne="1">
      <meta content="$categories::title$categories::title_sep$blog_title - {{site_title}}" itemprop="name">
      <meta content="{{image}}" itemprop="image">
      <link href="{{canonical}}" itemprop="url">
      <meta content="{{description}}" itemprop="description">

      <meta content="$categories::title$categories::title_sep$blog_title - {{site_title}}" property="og:title">
      <meta content="{{image}}" property="og:image">
      <meta content="{{description}}" property="og:description">
    </?>

    <?$permalink::is_permalink eq="1">
      <meta content="$permalink::title" property="og:title">
      <meta content="$utils::ogp_image" property="og:image">
      <meta content="$permalink::description" property="og:description">
    </?>

    <meta content="{{type}}" property="og:type">
    <meta content="$utils::canonical" property="og:url">
    <meta content="ja_JP" property="og:locale">
    <meta content="{{site_title}}" property="og:site_name">
    <meta content="https://www.facebook.com/hail2u" prefix="article: http://ogp.me/ns/article#" property="article:author">
    <meta content="100000022521341" prefix="fb: http://ogp.me/ns/fb#" property="fb:admins">

    <meta content="$utils::card_type" name="twitter:card">
    <meta content="@hail2unet" name="twitter:site">
    <meta content="@hail2u_" name="twitter:creator">

    {{> style}}

    {{> script}}
  </head>

  <body>
    {{> global-header}}

    <main class="main" <?$permalink::is_permalink ne="1"> role="main"</?>>
      <?$categories::enabled eq="1">
        <section class="post-list">
          <h1 class="first-heading">“$categories::title”についての記事</h1>

          <footer class="section-footer">
            <p>What I wrote about “$categories::title”</p>
          </footer>

          <ol>
      </?>

<!-- blosxom date -->

<!-- blosxom story -->
      <article<?$permalink::is_permalink eq="1"> role="main"</?>>
        <?$utils::has_image ne="1"><meta content="{{image}}" itemprop="image"></?>
        <link href="$url$path/$fn.$default_flavour" itemprop="url">

        <h1 class="first-heading" itemprop="name">$title</h1>

        <footer class="section-footer">
          <p>on <time datetime="$yr-$mo_num-$da<?$fn>T</?>$ti<?$fn>:</?>00+09:00" itemprop="datePublished">$mo <@utils.strip_leading_zeros output="Yes">$da</@utils.strip_leading_zeros>, $yr</time>
            under <span class="tag" itemprop="keywords"><a href="$url$path/">$categories::name</a></span></p>
        </footer>

        <div itemprop="articleBody">$body</div>
      </article>

      <?$story_counter::count eq="1">
        {{> google-adsense__ad-main}}
      </?>

      <?$back_and_forth::enabled eq="1">
        <nav class="read-older">
          $back_and_forth::prev
        </nav>
      </?>

<!-- blosxom foot -->
      <?$categories::enabled eq="1">
          </ol>
        </section>

        {{> google-adsense__ad-main}}
      </?>
    </main>

    {{> site-search}}

    {{> global-footer}}
  </body>
</html>
