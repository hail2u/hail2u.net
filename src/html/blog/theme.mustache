<!-- blosxom content_type text/html; charset=$blog_encoding -->

<!-- blosxom head -->
<!DOCTYPE html>
<html lang="$blog_language"<?$permalink::is_permalink eq="1"> class="permalink"</?>>
  <head>
    {{> meta}}

    <title>$categories::title$categories::title_sep$permalink::title$permalink::title_sep$blog_title - {{site_title}}</title>

    {{> link}}
    {{> script}}
  </head>

  <body>
    {{> global-header}}

    <main class="content" role="main">
      <?$categories::enabled eq="1">
        <section>
          <h1 class="first-heading">“$categories::title”についての記事</h1>

          <footer class="section-footer">
            <p>What I wrote about “$categories::title”</p>
          </footer>

          <ol class="post-list">
      </?>

<!-- blosxom date -->

<!-- blosxom story -->
      <article<?$permalink::has_eyecatch eq="1"> class="has-image"</?>>
        <h1 class="first-heading">$title</h1>

        <footer class="section-footer">
          <p><time class="date" datetime="$yr-$mo_num-$da<?$fn>T</?>$ti<?$fn>:</?>00+09:00">$mo <@utils.strip_leading_zeros output="Yes">$da</@utils.strip_leading_zeros>, $yr</time>
            · <span class="tag"><a href="$url$path/">$categories::name</a></span></p>
        </footer>

        $body

        <?$permalink::is_permalink eq="1">
          <aside>
            <p class="twitter-share"><a href="https://twitter.com/intent/tweet?text=$title&amp;via=hail2u_&amp;related=hail2unet">Share</a></p>
          </aside>
        </?>
      </article>

      <?$story_counter::count eq="1">
        {{> google-adsense}}
      </?>

      <?$back_and_forth::enabled eq="1">
        $back_and_forth::next
      </?>

<!-- blosxom foot -->
      <?$categories::enabled eq="1">
          </ol>
        </section>

        {{> google-adsense}}
      </?>
    </main>

    {{> site-search}}
    {{> global-footer}}
  </body>
</html>
<!-- DEBUG: $utils::debug -->

<!-- blosxom back_and_forth_next -->
<nav class="read-older">
  <a href="$back_and_forth::next_url" rel="next prerender">
    <p>$back_and_forth::next_title</p>
  </a>
</nav>

<!-- blosxom categories_story -->
<li>
  <div class="info"><time class="date" datetime="$yr-$mo_num-$da<?$fn>T</?>$ti<?$fn>:</?>00+09:00">$mo <@utils.strip_leading_zeros output="Yes">$da</@utils.strip_leading_zeros>, $yr</time></div>
  <a href="$url$path/$fn.$default_flavour">$title</a>
</li>
