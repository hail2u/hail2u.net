<!DOCTYPE html>
<html lang="ja">
  <head>
    {{> meta}}

    <title>{{short_title}} - {{site_title}}</title>

    {{> link}}
    {{> script}}

    <style>
      .post-list li a:before {
        letter-spacing: .5em;
      }

      .dribbble a:before {
        content: "🏀";
      }

      .github a:before {
        content: "★";
      }

      .instagram a:before {
        content: "📷";
      }

      .other a:before {
        content: "📑";
      }

      .pinboard a:before {
        content: "🔗";
      }

      .pinterest a:before {
        content: "📍";
      }

      .soundcloud a:before {
        content: "📢";
      }

      .vimeo a:before {
        content: "🎥";
      }
    </style>
  </head>

  <body>
    {{> global-header}}

    <main class="content" role="main">
      <section>
        <h1 class="first-heading">Sources</h1>

        <ul class="flat-list">
          <li><a href="https://pinboard.in/u:hail2u/">Pinboard</a></li>
          <li><a href="https://dribbble.com/hail2u/likes">Dribbble</a></li>
          <li><a href="https://github.com/stars/hail2u">GitHub</a></li>
          <li><a href="https://instagram.com/hail2u_/">Instagram</a></li>
          <li><a href="https://www.pinterest.com/hail2u/pins/">Pinterest</a></li>
          <li><a href="https://soundcloud.com/haiil2u/likes">SoundCloud</a></li>
          <li><a href="https://vimeo.com/hail2u/likes">Vimeo</a></li>
        </ul>
      </section>

      {{#bookmarks}}
        {{#isFirstInYear}}
          <section id="on-{{year}}">
            <h1><time>{{year}}</time></h1>

            <ol class="post-list">
        {{/isFirstInYear}}

        <li class="{{category}}">
          <div class="info"><time class="date" datetime="{{time}}">{{date}}</time></div>
          <a href="{{href}}">{{description}}</a>
        </li>

        {{#isLastInYear}}
            </ol>
          </section>
        {{/isLastInYear}}
      {{/bookmarks}}
    </main>

    {{> site-search}}
    {{> global-footer}}
  </body>
</html>
