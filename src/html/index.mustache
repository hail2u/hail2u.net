<!DOCTYPE html>
<html lang="ja" itemscope itemtype="http://schema.org/WebSite">
  <head>
    {{> meta}}

    <title itemprop="name">{{site_title}}</title>

    {{> link}}

    {{> descriptive-metadata}}

    {{> style}}

    {{> script}}
  </head>

  <body>
    {{> global-header}}

    <main class="content">
      {{#articles}}
        <section id="latest-article" class="topic">
          {{#first}}
            <a href="{{link}}">
              <h1 class="first-heading">{{{title}}}</h1>

              <footer class="section-footer">
                <p><time class="date" datetime="{{html5PubDate}}">{{strPubDate}}</time>
                  · <span class="tag">{{category}}</span></p>
              </footer>

              {{#hasImage}}<figure>{{{image}}}</figure>{{/hasImage}}

              <p>{{{description}}}</p>
            </a>
          {{/first}}
        </section>

        {{> google-adsense__ad-main}}

        <section id="recent-articles">
          <ol class="post-list">
            {{#item}}
              <li>
                <div class="info"><time class="date" datetime="{{html5PubDate}}">{{strPubDate}}</time>
                  · <span class="tag">{{category}}</span></div>
                <a href="{{link}}">{{{title}}}</a>
              </li>
            {{/item}}
          </ol>

          <nav class="seemore">
            <p><a href="/blog/">More articles</a></p>
          </nav>
        </section>
      {{/articles}}

      <section id="recent-updates">
        <h1>お知らせ</h1>

        {{#updates}}
          <ol class="post-list">
            {{#item}}
              <li>
                <div class="info"><time class="date" datetime="{{html5PubDate}}">{{strPubDate}}</time></div>
                <a href="{{link}}">{{{title}}}</a>
              </li>
            {{/item}}
          </ol>
        {{/updates}}
      </section>

      <section id="subscribe-links">
        <h1>フォロー</h1>

        <ul class="icon-list">
          <li><a href="https://twitter.com/hail2unet" itemprop="sameAs"><img alt="Twitter" src="../../images/icon/twitter.min.svg"></a></li>
          <li><a href="https://www.facebook.com/hail2u.net" itemprop="sameAs"><img alt="Facebook" src="../../images/icon/facebook.min.svg"></a></li>
          <li><a href="http://u2liah.tumblr.com/" itemprop="sameAs"><img alt="Tumblr" src="../../images/icon/tumblr.min.svg"></a></li>
          <li><a href="/feed" rel="alternate" type="application/rss+xml"><img alt="Feed" src="../../images/icon/feed.min.svg"></a></li>
        </ul>
      </section>
    </main>

    {{> global-footer}}

    {{> site-search}}
  </body>
</html>
