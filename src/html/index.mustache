<!DOCTYPE html>
<html lang="{{lang}}">
  {{> head}}

  <body>
    {{> global-header}}

    <main class="content">
      <div id="recent-articles" class="section">
        <ol class="posts">

        {{#articles}}
          <li>
            <div class="info"><time class="date" datetime="{{html5PubDate}}">{{strPubDate}}</time></div>
            <a class="title" href="{{link}}">{{{title}}}</a>
          </li>
        {{/articles}}

        </ol>

        <nav>
          <p><a href="./blog/">→ 過去ログの閲覧</a></p>
        </nav>
      </div>
    </main>

    {{> site-search}}
    {{> global-footer}}
  </body>
</html>
