<!DOCTYPE html>
<html lang="ja">
  <head>
    {{> meta}}

    <title>{{site_title}}</title>

    {{> link}}

    {{#home}}
      {{#articles}}
        {{#first}}<link href="{{link}}" rel="prerender">{{/first}}
      {{/articles}}
    {{/home}}

    {{> style}}

    {{> script}}
  </head>

  <body>
    {{> global-header}}

    <main class="content" role="main">
      {{#articles}}
        <section id="latest-article" class="topic">
          {{#first}}
            <a href="{{link}}" rel="prerender">
              <h1 class="first-heading">{{title}}</h1>

              <footer class="section-footer">
                <p><time class="date" datetime="{{html5PubDate}}">{{strPubDate}}</time>
                  · <span class="tag">{{category}}</span></p>
              </footer>

              {{#hasImage}}<figure>{{{image}}}</figure>{{/hasImage}}

              <p>{{description}}</p>
            </a>
          {{/first}}
        </section>

        {{> google-adsense}}

        <section id="recent-articles">
          <hr>

          <ol class="post-list">
            {{#item}}
              <li>
                <div class="info"><time class="date" datetime="{{html5PubDate}}">{{strPubDate}}</time></div>
                <a href="{{link}}">{{title}}</a>
              </li>
            {{/item}}
          </ol>
        </section>
      {{/articles}}

      <section id="recent-announces">
        <h1>お知らせ</h1>

        {{#updates}}
          <ol class="post-list">
            {{#item}}
              <li>
                <div class="info"><time class="date" datetime="{{html5PubDate}}">{{strPubDate}}</time></div>
                <a href="{{link}}">{{title}}</a>
              </li>
            {{/item}}
          </ol>
        {{/updates}}
      </section>
    </main>

    {{> site-search}}

    {{> global-footer}}
  </body>
</html>
