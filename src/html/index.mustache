<!DOCTYPE html>
<html lang="ja">
  {{> head}}

  <body>
    {{> global-header}}

    <main class="content" role="main">
      {{#articles}}
        <section id="latest-article" class="topic">
          {{#first}}
            <a href="{{link}}" rel="prerender">
              <h1 class="first-heading">{{title}}</h1>

              <footer class="section-footer">
                <p><time class="date" datetime="{{html5PubDate}}">{{strPubDate}}</time>
                  · <span class="tag">{{category}}</span></p>
              </footer>

              {{#hasImage}}<figure>{{{image}}}</figure>{{/hasImage}}

              <p>{{description}} <span class="more">→</span></p>
            </a>
          {{/first}}
        </section>

        <section id="recent-articles">
          <hr>

          <ol class="post-list">
            {{#item}}
              <li>
                <div class="info"><time class="date" datetime="{{html5PubDate}}">{{strPubDate}}</time></div>
                <a href="{{link}}">{{title}}</a>
              </li>
            {{/item}}
          </ol>
        </section>
      {{/articles}}
    </main>

    {{> site-search}}
    {{> global-footer}}
  </body>
</html>
