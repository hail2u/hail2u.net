{{> header}}

<ol class="thumbs">
	{{#photos}}
		<li><a href="{{url}}"><img height="{{height}}" src="{{url}}" title="{{title}}" width="{{width}}"></a></li>
	{{/photos}}
</ol>

<template class="js-append-next">
	<p class="form"><button>残りの写真を表示</button></p>
</template>

<nav class="js-append-next-fallback">
	<p><a href="{{canonical}}log.html">すべての写真を表示</a></p>
</nav>

{{#otherPhotos}}
	{{#isFirstInMonth}}
		<template class="js-append-next">
			<section id="on-{{strYear}}-{{strMonth}}">
				<h2><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

				<ol class="thumbs">
	{{/isFirstInMonth}}

	<li><a href="{{url}}"><img height="{{height}}" src="{{url}}" title="{{title}}" width="{{width}}"></a></li>

	{{#isLastInMonth}}
				</ol>

				{{^isOldest}}
					<p class="form"><button>残りの写真を更に表示</button></p>
				{{/isOldest}}
			</section>
		</template>
	{{/isLastInMonth}}
{{/otherPhotos}}

<script async defer src="/js/append-next.{{version}}.js"></script>

{{> footer}}
