{{> header}}

<ol class="showcase">
	{{#photos}}
		<li><a href="{{link}}"><img height="{{height}}" src="{{link}}" title="{{title}}" width="{{width}}"></a></li>
	{{/photos}}
</ol>

<nav class="js-append-next-fallback">
	<p><a href="{{canonical}}log.html"><span aria-hidden="true">→</span> 残りすべての写真</a></p>
</nav>

<template class="js-append-next">
	<p><button type="button">残りの写真を表示</button></p>
</template>

{{#otherPhotos}}
	{{#isFirstInMonth}}
		<template class="js-append-next">
			<section>
				<h2><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

				<ol class="showcase">
	{{/isFirstInMonth}}

	<li><a href="{{link}}"><img height="{{height}}" src="{{link}}" title="{{title}}" width="{{width}}"></a></li>

	{{#isLastInMonth}}
				</ol>

				{{^isOldest}}
					<p><button type="button">残りの写真を更に表示</button></p>
				{{/isOldest}}
			</section>
		</template>
	{{/isLastInMonth}}
{{/otherPhotos}}

<script async defer src="/js/append-next.{{version}}.js"></script>

{{> footer}}
