{{> header}}

<section>
	<h2 class="headline">最新24枚</h2>

	<ol class="thumbs">
		{{#photos}}
			<li><a href="{{url}}"><img alt="" height="{{height}}" src="{{url}}" width="{{width}}"></a></li>
		{{/photos}}
	</ol>
</section>

<nav class="subnavigation">
	<p class="js-append-others-link"><a href="{{canonical}}log.html">すべての写真を表示</a></p>

	<template class="js-append-others-others">
		<p><button>残りの写真を表示</button></p>
	</template>
</nav>

{{#otherPhotos}}
	{{#isFirstInMonth}}
		<template class="js-append-others-others">
			<section id="on-{{strYear}}-{{strMonth}}">
				<h2 class="headline"><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

				<ol class="thumbs">
	{{/isFirstInMonth}}

	<li><a href="{{url}}"><img alt="" height="{{height}}" src="{{url}}" width="{{width}}"></a></li>

	{{#isLastInMonth}}
				</ol>

				{{^isOldest}}
					<p><button>残りの写真を更に表示</button></p>
				{{/isOldest}}
			</section>
		</template>
	{{/isLastInMonth}}
{{/otherPhotos}}

<script async defer src="/js/append-others.{{version}}.js"></script>

{{> footer}}
