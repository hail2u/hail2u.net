package ditch_h1_in_title;

use strict;

sub start {
  return 1;
}

sub story {
  my($pkg, $path, $filename, $story_ref, $title_ref, $body_ref) = @_;

  $$title_ref =~ s!^<h1>(.*)</h1>$!$1!;

  return 1;
}

1;
# vim:ft=perl:
