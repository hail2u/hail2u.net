<head>
  <meta charset="{{encoding}}">

  <title>{{^isHome}}{{shortTitle}} - {{/isHome}}{{siteTitle}}</title>

  <meta content="light dark" name="color-scheme">
  <meta content="{{description}}" name="description">
  <meta content="width=device-width" name="viewport">

  <meta content="{{description}}" property="og:description">
  <meta content="{{scheme}}//{{domain}}{{cover}}" property="og:image">
  <meta content="{{lang}}_{{region}}" property="og:locale">
  <meta content="{{siteTitle}}" property="og:site_name">
  <meta content="{{#isHome}}{{siteTitle}}{{/isHome}}{{^isHome}}{{shortTitle}}{{/isHome}}" property="og:title">
  <meta content="{{type}}" property="og:type">
  <meta content="{{scheme}}//{{domain}}{{canonical}}" property="og:url">
  <meta content="{{twitterCard}}" name="twitter:card">
  <meta content="@{{twitterUsername}}" name="twitter:site">

  <link href="{{feedURL}}" rel="alternate" type="application/rss+xml">
  <link href="{{website}}" rel="author">
  <link href="{{canonical}}" rel="canonical">
  <link href="{{licenseURL}}" rel="license">
  <link href="https://www.google.com/search?q=site:{{domain}}" rel="search">

  <link href="/css/main.{{version}}.min.css" rel="stylesheet">
</head>
