{{> header}}

<section>
	<h1 data-description="{{description}}">{{siteTitle}}</h1>

	<section>
		<h2>雑多な記録</h2>

		<ol class="posts">
			{{#articles}}
				<li>
					<time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time>
					<a href="{{link}}">{{title}}</a>
				</li>
			{{/articles}}
		</ol>
	</section>

	<section>
		{{#documents}}
			<header>
				<p class="metaline"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time></p>

				<h2><a href="{{link}}">{{title}}</a></h2>
			</header>

			<p>{{description}}</p>
		{{/documents}}
	</section>

	<section>
		<h2>気になったウェブページ</h2>

		<ol class="posts">
			{{#links}}
				<li>
					<time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time>
					<a href="{{url}}">{{title}}</a>: {{comment}}
				</li>
			{{/links}}
		</ol>
	</section>

	<section>
		{{#statuses}}
			<header>
				<p class="metaline"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日 {{hour}}時{{minute}}分</time></p>

				<h2>{{text}}</h2>
			</header>
		{{/statuses}}
	</section>

	<section>
		<h2>読み終えた本</h2>

		<ol class="showcase oneline">
			{{#books}}
				<li><a href="https://www.amazon.co.jp/exec/obidos/ASIN/{{asin}}/hail2unet-22"><img height="{{height}}" src="https://m.media-amazon.com/images/P/{{asin}}.jpg" title="{{title}}" width="{{width}}"></a></li>
			{{/books}}
		</ol>
	</section>
</section>

{{> footer}}
