<!DOCTYPE html>
<html lang="{{lang}}">
	{{> head}}

	<body>
		<main>
			<section>
				<h1 data-description="{{description}}">{{siteTitle}}</h1>

				<section>
					<h2>雑多な記録</h2>

					{{#articles}}
						<section>
							<p class="date"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time></p>

							<h3><a href="{{link}}">{{title}}</a></h3>
						</section>
					{{/articles}}

					<p><a href="/blog/"><span aria-hidden="true">→ </span>他の雑多な記録</a></p>
				</section>

				<section>
					<h2>読み終えた書籍</h2>

					<ol class="showcase">
						{{#books}}
							<li>{{{body}}}</li>
						{{/books}}
					</ol>

					<p><a href="/bookshelf/"><span aria-hidden="true">→ </span>他の読み終えた書籍</a></p>
				</section>

				<section>
					<h2>気になったウェブページ</h2>

					{{#links}}
						<section>
							<p class="date"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time></p>

							<h3><a href="{{link}}">{{title}}</a></h3>
						</section>
					{{/links}}

					<p><a href="/links/"><span aria-hidden="true">→ </span>他の気になったウェブページ</a></p>
				</section>
			</section>
		</main>

		{{> page-footer}}
	</body>
</html>
