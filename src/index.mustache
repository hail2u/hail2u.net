<!DOCTYPE html>
<html lang="{{lang}}">
  {{> head}}

  <body>
    {{> header}}

    <main>
      <section>
        <h1 class="hang">最近書いた記事</h1>

        <ol class="posts" role="directory">
          {{#articles}}
            <li>
              <time class="js-reldate" datetime="{{html5PubDate}}">{{strPubDate}}</time>
              <a href="{{link}}">{{{title}}}</a>
            </li>
          {{/articles}}
        </ol>
      </section>
    </main>

    {{> subcontent}}
    {{> footer}}
  </body>
</html>
