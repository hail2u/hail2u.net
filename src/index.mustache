<!DOCTYPE html>
<html lang="{{lang}}" itemscope itemtype="http://schema.org/{{schemaType}}">
	{{> head}}

	<body>
		{{> page-header}}

		<main id="main" class="page-content">
			<section>
				<h1 data-description="{{description}}">{{siteTitle}}</h1>

				<section>
					<h2>雑多な記録</h2>

					<ol class="posts">
						{{#articles}}
							<li>
								<time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time>
								<a href="{{link}}">{{title}}</a>
							</li>
						{{/articles}}
					</ol>
				</section>

				<section>
					{{#documents}}
						<header>
							<p class="metaline"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time></p>

							<h2><a href="{{link}}">{{title}}</a></h2>
						</header>
					{{/documents}}
				</section>

				<section>
					<h2>気になったウェブページ</h2>

					<ol class="posts">
						{{#links}}
							<li>
								<time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time>
								<a href="{{link}}">{{title}}</a>
							</li>
						{{/links}}
					</ol>
				</section>

				<section>
					{{#statuses}}
						<header>
							<p class="metaline"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日 {{hour}}時{{minute}}分</time></p>

							<h2>{{title}}</h2>
						</header>
					{{/statuses}}
				</section>

				<section>
					<h2>読み終えた本</h2>

					<ol class="showcase">
						{{#books}}
							<li>{{{body}}}</li>
						{{/books}}
					</ol>
				</section>
			</section>
		</main>

		{{> page-footer}}
	</body>
</html>
