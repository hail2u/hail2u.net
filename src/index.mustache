{{> header}}

<section>
	<h1 id="tagline" data-description="{{description}}">{{siteTitle}}</h1>

	<p><span aria-hidden="true">⇒</span> <a href="/about/">もう少し詳しく</a></p>

	<section>
		<h2>雑多な記録</h2>

		<ol class="posts">
			{{#articles}}
				<li>
					<p class="metaline"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time></p>

					<p><a href="{{link}}">{{title}}</a></p>
				</li>
			{{/articles}}
		</ol>

		<footer>
			<p><span aria-hidden="true">⇒</span> <a href="/blog/">すべての記事</a></p>
		</footer>
	</section>

	<section>
		{{#documents}}
			<header>
				<p class="metaline"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time></p>

				<h2><a href="{{link}}">{{title}}</a></h2>
			</header>

			<p>{{description}}</p>
		{{/documents}}

		<footer>
			<p><span aria-hidden="true">⇒</span> <a href="/documents/">すべての特集</a></p>
		</footer>
	</section>

	<section>
		<h2>気になったウェブページ</h2>

		<ol class="posts">
			{{#links}}
				<li>
					<p class="metaline"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time></p>

					<p><a href="{{url}}">{{title}}</a>: {{comment}}</p>
				</li>
			{{/links}}
		</ol>

		<footer>
			<p><span aria-hidden="true">⇒</span> <a href="/links/">すべてのブックマーク</a></p>
		</footer>
	</section>

	<section>
		{{#statuses}}
			<header>
				<p class="metaline"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日 {{hour}}時{{minute}}分</time></p>

				<h2>{{text}}</h2>
			</header>
		{{/statuses}}

		<footer>
			<p><span aria-hidden="true">⇒</span> <a href="/statuses/">すべての近況</a></p>
		</footer>
	</section>

	<section>
		<h2>読み終えた本</h2>

		<ol class="showcase oneline">
			{{#books}}
				<li><a href="https://www.amazon.co.jp/exec/obidos/ASIN/{{asin}}/hail2unet-22"><img height="{{height}}" src="https://m.media-amazon.com/images/P/{{asin}}.jpg" title="{{title}}" width="{{width}}"></a></li>
			{{/books}}
		</ol>

		<footer>
			<p><span aria-hidden="true">⇒</span> <a href="/bookshelf/">すべての読んだ本</a></p>
		</footer>
	</section>
</section>

{{> footer}}
