<!DOCTYPE html>
<html lang="{{lang}}">
	{{> head}}

	<body>
		<main>
			<section>
				<h1 data-description="{{description}}">{{siteTitle}}</h1>

				{{#articles}}
					<p><a href="{{link}}">{{title}}</a>（<time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time>）</p>
				{{/articles}}

				<hr>

				<ol class="showcase">
					{{#books}}
						<li>{{{body}}}</li>
					{{/books}}
				</ol>

				<hr>

				{{#links}}
					<p><a href="{{link}}">{{title}}</a></p>
				{{/links}}

				<hr>

				{{#statuses}}
					<p>{{title}} — <time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日 {{hour}}:{{minute}}</time></p>
				{{/statuses}}
			</section>
		</main>

		{{> page-footer}}
	</body>
</html>
