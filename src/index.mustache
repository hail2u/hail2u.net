<!DOCTYPE html>
<html lang="{{lang}}">
	{{> head}}

	<body>
		{{> page-header}}

		<main>
			<section>
				<h1 data-description="{{description}}">{{siteTitle}}</h1>

				<ol class="posts">
					{{#articles}}
						<li>
							<time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time>
							<a href="{{link}}">{{title}}</a>
						</li>
					{{/articles}}
				</ol>

				<hr>

				<ol class="showcase">
					{{#books}}
						<li>{{{body}}}</li>
					{{/books}}
				</ol>

				<hr>

				<ol class="posts">
					{{#links}}
						<li>
							<time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{year}}年{{month}}月{{date}}日</time>
							<a href="{{link}}">{{title}}</a>
						</li>
					{{/links}}
				</ol>
			</section>
		</main>

		{{> page-footer}}
	</body>
</html>
