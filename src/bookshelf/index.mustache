<!DOCTYPE html>
<html lang="{{lang}}">
	{{> head}}

	<body>
		{{> page-header}}

		<main>
			<section>
				<h1>{{title}}</h1>

				<ol class="showcase">
					{{#books}}
						<li>{{{body}}}</li>
					{{/books}}
				</ol>

				{{#otherBooks}}
					{{#isFirstInMonth}}<section>
						<h2><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

						<ol>{{/isFirstInMonth}}
							<li><a href="{{link}}">{{title}}</a></li>
						{{#isLastInMonth}}</ol>
					</section>{{/isLastInMonth}}
				{{/otherBooks}}
			</section>
		</main>

		{{> page-footer}}
	</body>
</html>
