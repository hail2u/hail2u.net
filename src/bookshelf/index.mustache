{{> header}}

<main>
  <section>
    <h2>最新36冊</h2>

    <ul>
      {{#books}}
        <li><a href="https://www.amazon.co.jp/exec/obidos/ASIN/{{asin}}/hail2unet-22"><img alt="{{title}}" src="https://images-fe.ssl-images-amazon.com/images/P/{{asin}}.jpg"></a></li>
      {{/books}}
    </ul>

    <template id="append-others-button">
      <p><button>残り{{numOtherBooks}}冊の本を表示</button></p>
    </template>

    <script async defer src="/js/append-others.js"></script>
  </section>

  <noscript>
    <nav>
      <p><a href="{{canonical}}log.html">すべての本を表示</a></p>
    </nav>
  </noscript>

  <template id="append-others-others">
    {{#otherBooks}}
      {{#isFirstInMonth}}
        <section id="on-{{strYear}}-{{strMonth}}">
          <h2><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

          <ul>
      {{/isFirstInMonth}}

      <li><a href="https://www.amazon.co.jp/exec/obidos/ASIN/{{asin}}/hail2unet-22"><img alt="{{title}}" src="https://images-fe.ssl-images-amazon.com/images/P/{{asin}}.jpg"></a></li>

      {{#isLastInMonth}}
          </ul>
        </section>
      {{/isLastInMonth}}
    {{/otherBooks}}
  </template>
</main>

{{> footer}}
