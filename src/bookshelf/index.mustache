{{> header}}

<section>
	<h2 class="headline">最新24冊</h2>

	<figure class="gallery">
		{{#books}}
			<a href="https://www.amazon.co.jp/exec/obidos/ASIN/{{asin}}/hail2unet-22"><img alt="{{title}}" height="{{height}}" src="https://images-fe.ssl-images-amazon.com/images/P/{{asin}}.jpg" width="{{width}}"></a>
		{{/books}}
	</figure>
</section>

<nav class="subnavigation">
	<p class="js-append-others-link"><a href="{{canonical}}log.html">すべての本を表示</a></p>

	<template class="js-append-others-button">
		<p><button>残りの本を表示</button></p>
	</template>
</nav>

{{#otherBooks}}
	{{#isFirstInMonth}}
		<template class="js-append-others-others">
			<section id="on-{{strYear}}-{{strMonth}}">
				<h2 class="headline"><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

				<figure class="gallery">
	{{/isFirstInMonth}}

	<a href="https://www.amazon.co.jp/exec/obidos/ASIN/{{asin}}/hail2unet-22"><img alt="{{title}}" height="{{height}}" src="https://images-fe.ssl-images-amazon.com/images/P/{{asin}}.jpg" width="{{width}}"></a>

	{{#isLastInMonth}}
				</figure>

				{{^isOldest}}
					<p><button>残りの本を更に表示</button></p>
				{{/isOldest}}
			</section>
		</template>
	{{/isLastInMonth}}
{{/otherBooks}}

<script async defer src="/js/append-others.{{version}}.js"></script>

{{> footer}}
