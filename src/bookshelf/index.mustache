{{> header}}

<section>
	<h1>{{title}}</h1>

	<p>以下の読んだ本のリンク先は、すべてAmazonのアフィリエイト・リンクになっています。</p>

	{{#books}}
		{{#isFirstInMonth}}
			<section>
				<h2><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

				<ol class="posts">
		{{/isFirstInMonth}}

					<li><a href="https://www.amazon.co.jp/exec/obidos/ASIN/{{asin}}/hail2unet-22">{{title}}</a></li>

		{{#isLastInMonth}}
				</ol>
			</section>
		{{/isLastInMonth}}
	{{/books}}
</section>

{{> footer}}
