<!DOCTYPE html>
<html lang="{{lang}}">
  {{> head}}

  <body>
    {{> header}}

    <main>
      <section>
        <h1>最新60冊</h1>

        <ul>
          {{#books}}
            <li><a href="https://www.amazon.co.jp/exec/obidos/ASIN/{{asin}}/hail2unet-22"><img alt="{{title}}" src="https://images-fe.ssl-images-amazon.com/images/P/{{asin}}.jpg"></a></li>
          {{/books}}
        </ul>

        <p><button>すべての本を表示</button></p>

        <script async defer src="/js/append-others.js"></script>
      </section>

      <template>
        {{#otherBooks}}
          {{#isFirstInMonth}}
            <section id="on-{{strYear}}-{{strMonth}}">
              <h1><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h1>

              <ul>
          {{/isFirstInMonth}}

          <li><a href="https://www.amazon.co.jp/exec/obidos/ASIN/{{asin}}/hail2unet-22"><img alt="{{title}}" src="https://images-fe.ssl-images-amazon.com/images/P/{{asin}}.jpg"></a></li>

          {{#isLastInMonth}}
              </ul>
            </section>
          {{/isLastInMonth}}
        {{/otherBooks}}
      </template>
    </main>

    {{> footer}}
  </body>
</html>
