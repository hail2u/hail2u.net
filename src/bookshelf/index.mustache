{{> header}}

<ol class="thumbs">
	{{#books}}
		<li><a href="https://www.amazon.co.jp/exec/obidos/ASIN/{{asin}}/hail2unet-22"><img height="{{height}}" src="https://images-fe.ssl-images-amazon.com/images/P/{{asin}}.jpg" title="{{title}}" width="{{width}}"></a></li>
	{{/books}}
</ol>

<template class="js-append-next">
	<p class="rectform"><button type="button">残りの本を表示</button></p>
</template>

<nav class="subnavigation js-append-next-fallback">
	<p><a href="{{canonical}}log.html">残りすべての本を表示</a></p>
</nav>

{{#otherBooks}}
	{{#isFirstInMonth}}
		<template class="js-append-next">
			<section id="on-{{strYear}}-{{strMonth}}">
				<h2><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

				<ol class="thumbs">
	{{/isFirstInMonth}}

	<li><a href="https://www.amazon.co.jp/exec/obidos/ASIN/{{asin}}/hail2unet-22"><img height="{{height}}" src="https://images-fe.ssl-images-amazon.com/images/P/{{asin}}.jpg" title="{{title}}" width="{{width}}"></a></li>

	{{#isLastInMonth}}
				</ol>

				{{^isOldest}}
					<p class="rectform"><button type="button">残りの本を更に表示</button></p>
				{{/isOldest}}
			</section>
		</template>
	{{/isLastInMonth}}
{{/otherBooks}}

<script async defer src="/js/append-next.{{version}}.js"></script>

{{> footer}}
