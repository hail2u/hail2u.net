{{> header}}

<article>
	<header>
		<p class="metaline"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00" itemprop="datePublished">{{year}}年{{month}}月{{date}}日</time></p>

		<h1>{{title}}</h1>
	</header>

	<div itemprop="articleBody">
		{{{body}}}
	</div>

	{{#previous}}
		<footer>
			<p class="more prev"><a href="{{link}}" rel="prev">{{title}}</a></p>
		</footer>
	{{/previous}}
</article>

{{> footer}}
