<!DOCTYPE html>
<html lang="{{lang}}">
	{{> head}}

	<body>
		{{> page-header}}

		{{#articles}}
			{{#isFirstInMonth}}
				<section{{#isFirstInYear}} id="on-{{strYear}}"{{/isFirstInYear}}>
					<h2><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>
			{{/isFirstInMonth}}

			<p><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{strYear}}-{{strMonth}}-{{strDate}}</time>&#x2003;&#x2003;<a href="{{link}}">{{title}}</a></p>

			{{#isLastInMonth}}
				</section>
			{{/isLastInMonth}}
		{{/articles}}

		{{> page-footer}}
	</body>
</html>
