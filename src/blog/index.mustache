{{> header}}

<nav class="subnavigation">
  <ol>
    {{#articles}}
      {{#isFirstInYear}}
        <li>{{year}}年:
          <ol>
      {{/isFirstInYear}}

      {{#isFirstInMonth}}
        <li><a href="#on-{{strYear}}-{{strMonth}}">{{month}}月</a></li>
      {{/isFirstInMonth}}

      {{#isLastInYear}}
          </ol>
        </li>
      {{/isLastInYear}}
    {{/articles}}
  </ol>
</nav>

{{#articles}}
  {{#isFirstInMonth}}
    <section id="on-{{strYear}}-{{strMonth}}">
      <h2 class="headline"><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

      <ol class="posts">
  {{/isFirstInMonth}}

  <li>
    <time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{date}}日</time>
    <a href="{{link}}">{{title}}</a>
  </li>

  {{#isLastInMonth}}
      </ol>
    </section>
  {{/isLastInMonth}}
{{/articles}}

{{> footer}}
