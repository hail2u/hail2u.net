<!DOCTYPE html>
<html lang="{{lang}}">
  {{> head}}

  <body>
    {{> header}}

    <main>
      {{#items}}
        {{#isFirstInMonth}}
          <section id="on-{{strYear}}-{{strMonth}}">
            <h1><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h1>

            <ol role="directory">
        {{/isFirstInMonth}}

        <li>
          <time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{date}}日</time>
          <a href="{{link}}">{{title}}</a>
        </li>

        {{#isLastInMonth}}
            </ol>
          </section>
        {{/isLastInMonth}}
      {{/items}}
    </main>

    {{> footer}}
  </body>
</html>
