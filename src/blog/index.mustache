{{> header}}

{{#articles}}
	{{#isFirstInMonth}}
		<section id="on-{{strYear}}-{{strMonth}}">
			<h2 class="headline"><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>

			<ol class="posts">
	{{/isFirstInMonth}}

	<li>
		<time class="metaline" datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{month}}月{{date}}日</time>
		<a href="{{link}}">{{title}}</a>
	</li>

	{{#isLastInMonth}}
			</ol>
		</section>
	{{/isLastInMonth}}
{{/articles}}

{{> footer}}
