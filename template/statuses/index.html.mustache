<!DOCTYPE html>
<html lang="{{lang}}">
  {{> head.html}}

  <body>
    {{> page-header.html}}

    <main style="overflow-wrap: anywhere;">
      <nav>
        <h2>年別</h2>

        <ol class="archives">
          {{#statuses}}{{#isFirstInYear}}<li><a href="#{{strYear}}">{{year}}年</a></li>{{/isFirstInYear}}{{/statuses}}
          <li><a href="#2022">2022年</a></li>
          <li><a href="#2021">2021年</a></li>
          <li><a href="#2020">2020年</a></li>
          <li><a href="#2019">2019年</a></li>
          <li><a href="#2018">2018年</a></li>
          <li><a href="#2017">2017年</a></li>
          <li><a href="#2016">2016年</a></li>
          <li><a href="#2015">2015年</a></li>
          <li><a href="#2014">2014年</a></li>
          <li><a href="#2013">2013年</a></li>
          <li><a href="#2012">2012年</a></li>
          <li><a href="#2011">2011年</a></li>
          <li><a href="#2010">2010年</a></li>
        </ol>
      </nav>

      {{#statuses}}
        {{#isFirstInMonth}}
          <section{{#isFirstInYear}} id="{{strYear}}"{{/isFirstInYear}}>
            <h2><time datetime="{{strYear}}-{{strMonth}}">{{year}}年{{month}}月</time></h2>
        {{/isFirstInMonth}}

        <p id="{{published}}">{{title}} (<a href="{{link}}"><time datetime="{{strYear}}-{{strMonth}}-{{strDate}}T{{strHour}}:{{strMinute}}:{{strSecond}}+09:00">{{date}}日{{hour}}時{{minute}}分</time></a>)</p>

        {{#isLastInMonth}}
          </section>
        {{/isLastInMonth}}
      {{/statuses}}

      {{{log}}}
    </main>

    {{> page-footer.html}}
  </body>
</html>
